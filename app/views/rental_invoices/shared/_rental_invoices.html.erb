<div class="col-md-12">
  <h3>Rental Invoices</h3>
</div>
<div class="col-md-12">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Rental ID</th>
        <th>Apartment Number</th>
        <th>Tenant Name</th>
        <th>Invoice Date</th>
        <th>Invoice Due</th>
        <th>Invoice Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% rental_invoices.each do |rental_invoice| %>
        <tr class="<%= status_row_class( rental_invoice ) %>">
          <td><%= rental_invoice.rental.id %></td>
          <td><%= rental_invoice.rental.apartment.id %></td>
          <td><%= rental_invoice.rental.tenant.full_name %></td>
          <td><%= rental_invoice.invoice_date %></td>
          <td><%= rental_invoice.invoice_due %></td>
          <td><%= rental_invoice.status.titlecase %></td>
          <td><%= link_to 'Show', rental_invoice %></td>
          <td><%= link_to 'Edit', edit_rental_invoice_path(rental_invoice) %></td>
          <td><%= link_to 'Destroy', rental_invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
