<div class="row">
  <div class="col-md-12">

    <% if @rental_invoice.paid? %>
    <h2 class="alert alert-success">Rental Invoice Receipt</h2>
    <% else %>
    <h2>Rental Invoice</h2>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3>ID: <%= @rental_invoice.id %></h3>
    <h4>Invoice Amount: <%= @rental_invoice.amount %></h4>
    <% if !@rental_invoice.note.nil? %>
    <p>Note: <%= @rental_invoice.note %></p>
    <% end %>
    <hr>
    <h4>Invoice Date: <%= @rental_invoice.invoice_date %></h4>
    <h4>Invoice Due: <%= @rental_invoice.invoice_due %></h4>
    <h4>Invoice Amount: <%= number_to_currency(@rental_invoice.rental.rent_amount) %></h4>
  </div>
  <div class="col-md-6">
    <h3>Rental Status <%= raw status_button(@rental_invoice) %></h3>
    <% if !@rental_invoice.paid? %>
    <%= render partial: "rental_invoices/shared/form", locals: { rental_invoice: @rental_invoice } %>
    <% else %>

    <h4><strong>CC Number:</strong><%= @rental_invoice.cc_number %></h4>
    <h4><strong>CC Type:</strong><%= @rental_invoice.cc_type %></h4>
    <h4><strong>CC Expiration Date:</strong><%= @rental_invoice.cc_expiration_date %></h4>
    <h4><strong>CC Amount Charged:</strong> <%= @rental_invoice.cc_amount_charged %></h4>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= render partial: "tenants/shared/tenant", locals: { tenant: @rental_invoice.rental.tenant } %>
  </div>

  <div class="col-md-6">
    <%= render partial: "rentals/shared/rental", locals: { rental: @rental_invoice.rental } %>
  </div>
</div>



<p>

</p>

<%= link_to 'Edit', edit_rental_invoice_path(@rental_invoice) %> |
<%= link_to 'Back', rental_invoices_path %>
