
<div class="col-md-12">
  <h3>Rentals Overview</h3>
  <h4>Total Rentals: <%= @rentals.count %></h4>
</div>
<div class="col-md-12">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Sign date</th>
        <th>Status</th>
        <th>Cancel date</th>
        <th>Lease type</th>
        <th>Lease start</th>
        <th>Lease end</th>
        <th>Renewal date</th>
        <th>Has utility</th>
        <th>Deposit amount</th>
        <th>Rent amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.id %></td>
        <td><%= rental.sign_date %></td>
        <td><%= rental.status %></td>
        <td><%= rental.cancel_date %></td>
        <td><%= rental.lease_type %></td>
        <td><%= rental.lease_start %></td>
        <td><%= rental.lease_end %></td>
        <td><%= rental.renewal_date %></td>
        <td><%= rental.has_utility %></td>
        <td><%= rental.deposit_amount %></td>
        <td><%= rental.rent_amount %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Rental', new_rental_path %>
