

<h1>Listing Staffs</h1>

<table class="table table-hover table-condensed table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Position</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Salary</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.first_name %></td>
        <td><%= staff.last_name %></td>
        <td><%= staff.position.titlecase %></td>
        <td><%= staff.gender.titlecase %></td>
        <td><%= staff.dob %></td>
        <td><%= number_to_currency staff.salary %></td>
        <td><%= staff.user.username %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

