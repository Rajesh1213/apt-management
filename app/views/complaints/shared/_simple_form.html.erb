
  <%= form_for @complaint , class: "form col-md-12" do |f| %>
  <% if @complaint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@complaint.errors.count, "error") %> prohibited this complaint from being saved:</h2>

      <ul>
      <% @complaint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :complaintable_id, "Complaintable ID" %>
    <%= f.text_field :complaintable_id, disabled: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :complaintable_type, "Complaintable ID" %>
    <%= f.text_field :complaintable_type, disabled: true, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :date_filed %><br>
    <%= f.date_select :date_filed %>
  </div>

  <div class="form-group">
      <%= f.label :content %><br>
      <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :status %><br>
      <%= f.collection_select :status, Complaint.statuses.map { |c| [ c.first, c.first.to_s.titlecase ] }, :first, :second, {}, { class: "form-control" } %>
  </div>

  <div class="form-group actions">
    <%= f.submit "File Complaint", class: "btn btn-default col-md-12" %>
  </div>
<% end %>
