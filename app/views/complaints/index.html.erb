<p id="notice"><%= notice %></p>

<h1>Listing Complaints</h1>

<table>
  <thead>
    <tr>
      <th>Date filed</th>
      <th>Rental complaint</th>
      <th>Apartment complaint</th>
      <th>Status</th>
      <th>Complaintable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.date_filed %></td>
        <td><%= complaint.rental_complaint %></td>
        <td><%= complaint.apartment_complaint %></td>
        <td><%= complaint.status %></td>
        <td><%= complaint.complaintable %></td>
        <td><%= link_to 'Show', complaint %></td>
        <td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

