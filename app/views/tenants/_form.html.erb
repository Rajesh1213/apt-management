<div class="row">
  <div class="col-md-12">
    <%= form_for @tenant , html: { class: 'form-horizontal col-md-12' } do |f| %>
      <%= csrf_meta_tags %>

      <% if @tenant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tenant.errors.count, "error") %> prohibited this tenant from being saved:</h2>
          <ul>
          <% @tenant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :user_id, value: current_user.id %>

      <div class="form-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :dob %><br>
        <%= f.date_select :dob, class: 'form-control'  %>
      </div>



      <div class="form-group">
        <%= f.label :marital_status %><br>
        <select name="tenant[marital_status]" class="form-control">
          <option value="">Please select</option>
          <option value="0" selected="selected">Single</option>
          <option value="1">Married</option>
          <option value="2">Divorced</option>
        </select>
      </div>

      <div class="form-group">
        <%= f.label :work_phone %><br>
        <%= f.text_field :work_phone, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :home_phone %><br>
        <%= f.text_field :home_phone, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :employer %><br>
        <%= f.text_field :employer, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :gender %><br>
        <%= f.number_field :gender, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit 'Save Profile', class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>

</div>
