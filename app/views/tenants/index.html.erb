<h1>Listing Tenants</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>SSN</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>DOB</th>
      <th>Marital Status</th>
      <th>Work Phone</th>
      <th>Home Phone</th>
      <th>Employer</th>
      <th>Gender</th>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.ssn %></td>
        <td><%= tenant.first_name %></td>
        <td><%= tenant.last_name %></td>
        <td><%= tenant.dob %></td>
        <td><%= tenant.marital_status.titlecase %></td>
        <td><%= tenant.work_phone %></td>
        <td><%= tenant.home_phone %></td>
        <td><%= tenant.employer %></td>
        <td><%= tenant.gender.titlecase %></td>
        <td><%= tenant.user.username %></td>
        <td><%= link_to 'Show', tenant %></td>
        <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

