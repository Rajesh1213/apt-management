<%= form_for @apartment, class: "form" do |f| %>
  <% if @apartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

      <ul>
      <% @apartment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :apartment_id, "Apartment ID" %>
    <%= @apartment.id %>
  </div>

  <div class="form-group">
    <%= f.label :apartment_type, "Apartment Type" %><br>
    <%= f.collection_select :apartment_type_id, ApartmentType.all, :id, :name, {}, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :status, "Status" %><br>
    <%= f.collection_select :status, Apartment.statuses.map { |s| [s.first, s.first.titlecase ] }, :first, :last, {}, { class: "form-control" } %>
  </div>
  <div class="actions">
    <%= f.submit "Update Apartment", class: "form-control" %>
  </div>
<% end %>
