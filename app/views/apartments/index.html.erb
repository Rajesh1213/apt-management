<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <h3>Apartments Overview</h3>
  <h4>Total Apts: <%= @apartments.count %></h4>
</div>
<div class="col-md-12">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Apt ID</th>
        <th>Type</th>
        <th>Status</th>
        <th>Lease Starts</th>
        <th>Lease Ends</th>
        <th>Tenant Info</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @apartments.each do |apartment| %>
      <tr class="<%= apartment.status %>">
        <td><%= apartment.id %></td>
        <td><%= apartment.apartment_type.titlecase %></td>
        <td><%= apartment.status.titlecase %> </td>
        <td><%= apartment.rentals.last.lease_start %></td>
        <td><%= apartment.rentals.last.lease_end %></td>
        <td>
          <span class="tenant-name"><%= apartment.tenants.last.full_name %><br/>
          <span class="label label-sm label-default">jane</span> <span class="label label-sm label-default">jane@mail.com</span> </td>
        <td>
          <span><%= link_to 'View Rental', rental_path(apartment.rentals.last) %></span><br/>
          <span><%= link_to 'Edit Apartment', edit_apartment_path(apartment) %></span><br/>
          <span><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>


