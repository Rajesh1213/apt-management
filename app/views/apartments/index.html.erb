<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Apt type</th>
      <th>Apt status</th>
      <th>Apt utility</th>
      <th>Apt deposit amt</th>
      <th>Apt rent amt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.apt_type %></td>
        <td><%= apartment.apt_status %></td>
        <td><%= apartment.apt_utility %></td>
        <td><%= apartment.apt_deposit_amt %></td>
        <td><%= apartment.apt_rent_amt %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

